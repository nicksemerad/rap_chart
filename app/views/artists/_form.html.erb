<h1> <%= @artist.id ? 'Edit Artist' : 'New Artist' %> </h1>
</br>
<%= form_for [@chart, @artist] do |f| %>


  <%= f.label :chart_id%>
  <%= f.collection_select :chart_id, Chart.order(:name),:id,:name, include_blank: true %>
  <%= f.text_field :chart_id, required: true%>

  <%= f.label :name%>
  <%= f.text_field :name, required: true%>
  

  <%= f.label :genre%>
  <%= f.text_field :genre, required: true%>

  <%= f.label :group%>
  <%= f.check_box :group, required: false%>
  <%= f.submit %>

<% end %>